{
    "name": "thystips",
    "description": "ThysTips theme for Ghost from Casper",
    "demo": "https://thys.tips",
    "version": "1.1.0",
    "engines": {
        "ghost": ">=5.0.0"
    },
    "license": "MIT",
    "screenshots": {
        "desktop": "assets/screenshot-desktop.jpg",
        "mobile": "assets/screenshot-mobile.jpg"
    },
    "scripts": {
        "dev": "gulp",
        "zip": "gulp zip",
        "test": "gscan .",
        "test:ci": "gscan --fatal --verbose .",
        "build": "gulp build",
        "preship": "yarn test",
        "ship": "STATUS=$(git status --porcelain); echo $STATUS; if [ -z \"$STATUS\" ]; then yarn version && git push --follow-tags; else echo \"Uncomitted changes found.\" && exit 1; fi",
        "postship": "git fetch && gulp release"
    },
    "author": {
        "name": "ThysTips",
        "email": "contact@thystips.net",
        "url": "https://thystips.net/"
    },
    "gpm": {
        "type": "theme",
        "categories": [
            "Minimal",
            "Magazine"
        ]
    },
    "keywords": [
        "ghost",
        "theme",
        "ghost-theme"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/thystips/thystips-casper.git"
    },
    "bugs": "https://github.com/thystips/thystips-casper/issues",
    "contributors": [
        "https://github.com/thystips/thystips-casper/graphs/contributors"
    ],
    "devDependencies": {
        "@alpinejs/collapse": "^3.13.3",
        "@alpinejs/persist": "^3.13.3",
        "@catppuccin/tailwindcss": "^0.1.6",
        "@tailwindcss/container-queries": "^0.1.1",
        "@tailwindcss/forms": "^0.5.7",
        "@tailwindcss/typography": "^0.5.10",
        "@tryghost/release-utils": "^0.8.1",
        "alpinejs": "^3.13.3",
        "autoprefixer": "^10.4.7",
        "beeper": "^2.1.0",
        "cssnano": "^5.1.12",
        "gscan": "^4.36.1",
        "gulp": "^4.0.2",
        "gulp-concat": "^2.6.1",
        "gulp-livereload": "^4.0.2",
        "gulp-postcss": "^9.0.1",
        "gulp-uglify": "^3.0.2",
        "gulp-zip": "^5.1.0",
        "inquirer": "^8.2.4",
        "postcss": "^8.2.13",
        "postcss-color-mod-function": "^3.0.3",
        "postcss-easy-import": "^4.0.0",
        "pump": "^3.0.0",
        "tailwindcss": "^3.3.6"
    },
    "browserslist": [
        "defaults"
    ],
    "config": {
        "posts_per_page": 25,
        "image_sizes": {
            "xxs": {
                "width": 30
            },
            "xs": {
                "width": 100
            },
            "s": {
                "width": 300
            },
            "m": {
                "width": 600
            },
            "l": {
                "width": 1000
            },
            "xl": {
                "width": 2000
            }
        },
        "card_assets": true,
        "custom": {
            "email_signup_text": {
                "type": "text",
                "default": "Sign up for more like this.",
                "group": "post"
            },
            "show_recent_posts_footer": {
                "type": "boolean",
                "default": true,
                "group": "post"
            }
        }
    },
    "renovate": {
        "extends": [
            "@tryghost:theme"
        ]
    }
}
